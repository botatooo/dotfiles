alias ls="exa -abhl --git"

alias updatemirrors='sudo reflector --save /etc/pacman.d/mirrorlist --protocol https --country Canada,Switzerland,Germany --latest 20 --sort age'

alias paru='/usr/bin/paru --pacman powerpill'

alias ssh='TERM=xterm ssh'

alias tb='nc termbin.com 9999'

alias icat='kitty +kitten icat'

alias code='codium'

[ -r "$ZDOTDIR/aliases.private" ] && source $ZDOTDIR/aliases.private
