alias ls="ls --color"

#alias update-initramfs="sudo genkernel --install --kernel-config=/boot/config-$(uname -r) initramfs"

alias update-grub="sudo grub-mkconfig -o /boot/grub/grub.cfg"

alias update-mirrors="reflector -f 200 -c \"United States\" --delay 0.25 | sudo tee /etc/pacman.d/mirrorlist"

alias esearch="eix --remote"

#alias yay='/usr/bin/yay --pacman powerpill'

alias updatemirrors='sudo reflector --country Canada -l 200 --sort rate --save /etc/pacman.d/mirrorlist-arch'

alias ssh='TERM=xterm ssh'

alias pakt='mosh pakt -- byobu'

alias tb='nc termbin.com 9999'

alias icat='kitty +kitten icat'

alias code='codium'

[ -r "$ZDOTDIR/aliases.private" ] && source $ZDOTDIR/aliases.private
