alias ls="exa -abhl --git"

alias diff="delta"

alias updatemirrors='sudo reflector --save /etc/pacman.d/mirrorlist --protocol https --country Canada,Switzerland,Germany --latest 20 --sort age;paru -Syy'

alias paru='/usr/bin/paru --pacman powerpill'

alias ssh='TERM=xterm ssh'

alias tb='nc termbin.com 9999'

alias icat='kitty +kitten icat'

alias code='codium'

[ -r "$BASHDOTDIR/aliases.private" ] && source $BASHDOTDIR/aliases.private
