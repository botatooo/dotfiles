ap.add_argument('--no-copy', help="do not copy the link", action='store_true', required=False)
args = ap.parse_args()

if (not path.exists(args.image)) or (not path.isfile(args.image)):
    raise OSError('image not provided or unknown file type')

adjectives = requests.get('https://github.com/ShareX/ShareX/raw/develop/ShareX.HelpersLib/Resources/adjectives.txt').text.split('\n')
