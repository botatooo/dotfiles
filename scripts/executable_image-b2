adjective = random.choice(adjectives).title()
animal = random.choice(animals).title()
#emoji = ''.join([random.choice(emojis) for _ in range(3)])

# Get date path (format: YYYY/MM/DD)
curdate = date.today().strftime('%Y/%m/%d')

# Provide 6 alphanumerical characters randomly (example: VYe11Y)
rand = ''.join(random.choice(string.ascii_letters + string.digits) for _ in range(6))

outPath = f"Flameshot/{curdate}/{adjective}{animal}_{rand}{path.splitext(args.image)[1]}"
outUrl = f"https://cdn.botato.gq/{outPath}"

subprocess.call(f"unbuffer b2 upload-file botato-img-host {args.image} \"{outPath}\" | unbuffer -p sed -nr 's/.*( |^)([0-9]+)%.*/\2/p' | zenity --progress --text=\"Uploading file...\" --auto-close", shell=True)

if not args.no_copy:
    res = subprocess.call(f"copyq copy \"{outUrl}\" > /dev/null", shell=True)
    if res != 0:
        import pyperclip
        pyperclip.copy(outUrl)

print(outUrl)
